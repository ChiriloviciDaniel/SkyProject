@page
@using SkyProject.Enums
@model SkyProject.Pages_Employees.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="row border border-2 p-3">
    <h1>Create new Employee</h1>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.Firstname" class="control-label"></label>
                <input asp-for="Employee.Firstname" class="form-control" />
                <span asp-validation-for="Employee.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.CreateDate" class="control-label"></label>
                <input asp-for="Employee.CreateDate" type="date" class="form-control" />
                <span asp-validation-for="Employee.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Role" class="control-label"></label>
                <select asp-for="Employee.Role" class="form-control"
                    asp-items="Html.GetEnumSelectList<EmployeeRole>()"></select>
                <span asp-validation-for="Employee.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.ExitDate" class="control-label"></label>
                <input asp-for="Employee.ExitDate" type="date" class="form-control" />
                <span asp-validation-for="Employee.ExitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
